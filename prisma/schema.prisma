// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Item {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  item  String
  seller String
  imgUrl String
  description   String
  price Int
  ratings     Int[]
  reviews     String[]
   
}
model Users{
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String
  userType String
  email String?
  address String?
  city String?
  phone String?
  photo String?
}
